{
  "name": "fugu-greetings",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npx http-server",
    "lint:js": "npx eslint ./public/js/*.mjs --fix && npx eslint ./public/*.js --fix",
    "lint:css": "npx stylelint ./public/css/*.css --fix",
    "lint": "npm run lint:js && npm run lint:css"
  },
  "pre-commit": [
    "lint"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomayac/fugu-greetings.git"
  },
  "author": "Thomas Steiner (https://blog.tomayac.com/)",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/tomayac/fugu-greetings/issues"
  },
  "homepage": "https://github.com/tomayac/fugu-greetings#readme",
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-google": "^0.14.0",
    "http-server": "^0.12.1",
    "pre-commit": "^1.2.2",
    "shx": "^0.3.2",
    "stylelint": "^13.0.0",
    "stylelint-config-standard": "^19.0.0",
    "terser": "^4.6.3"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "extends": [
      "google"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "selector-type-no-unknown": [
        true,
        {
          "ignore": [
            "custom-elements"
          ]
        }
      ],
      "property-no-unknown": [
        true,
        {
          "ignoreProperties": []
        }
      ]
    }
  }
}
